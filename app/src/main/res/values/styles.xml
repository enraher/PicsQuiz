<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="font">@font/comfortaa</item>
        <item name="android:textViewStyle">@style/ParentText</item>
    </style>

    <style name="ParentText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StarsTextGame" parent="ParentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ResizableText" parent="ParentText">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">22sp</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="HintText" parent="ParentText">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">7sp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="GameText" parent="ResizableText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:text">E</item>
        <item name="android:paddingBottom">3dp</item>

    </style>

    <style name="GameTextSolved" parent="GameText">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:textColor">@color/txt_btns_game</item>
        <item name="android:textSize">32sp</item>
        <item name="autoSizeMaxTextSize">32sp</item>
        <item name="android:text">_</item>

    </style>

    <style name="GameTextButton" parent="GameText">
        <item name="android:textColor">@color/txt_btns_game</item>
        <item name="android:background">@drawable/btn_game</item>
    </style>

    <style name="GameTextTimed" parent="GameText">
        <item name="android:textColor">@color/txt_btns_game</item>
        <item name="android:background">@drawable/btn_game</item>
        <item name="android:textSize">20sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
    </style>

    <style name="coverImageView" >
        <item name="srcCompat">@drawable/ic_gem_small</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="coverBgLight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/cover_game_color_1</item>
    </style>

    <style name="coverBgDarkt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/cover_game_color_2</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ParentButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="BtnMain" parent="ParentButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_main</item>
        <item name="android:paddingBottom">@dimen/width_stroke</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="BtnSecondary" parent="BtnMain">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BtnUnselected" parent="BtnMain">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/text_description_dialog</item>
    </style>

</resources>
