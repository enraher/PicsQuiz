<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:innerRadius="0dp"
    app:cardBackgroundColor="@color/transparent"
    android:shape="rectangle"
    android:thicknessRatio="1.9"
    app:cardCornerRadius="@dimen/cards_corner_radius"
    app:cardElevation="2dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_package"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_locked" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_package_free"
            style="@style/ResizableText"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/bg_txt_package_item_free"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/free"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/img_package"
            app:layout_constraintStart_toStartOf="@+id/img_package"
            app:layout_constraintTop_toTopOf="@+id/img_package" />




        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_package_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/bg_txt_package_item"
            app:layout_constraintBottom_toBottomOf="@+id/img_package"
            app:layout_constraintEnd_toEndOf="@+id/img_package"
            app:layout_constraintStart_toStartOf="@+id/img_package" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_package_name"
            style="@style/ResizableText"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Logos"
            android:textColor="@color/txt_package_item"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_package"
            app:layout_constraintEnd_toEndOf="@+id/img_package"
            app:layout_constraintStart_toStartOf="@+id/img_package" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_new_levesl_mark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/txt_new_levesl_mark"
            app:layout_constraintEnd_toEndOf="@+id/txt_new_levesl_mark"
            app:layout_constraintStart_toStartOf="@+id/txt_new_levesl_mark"
            app:layout_constraintTop_toTopOf="@+id/txt_new_levesl_mark"
            android:src="@drawable/ic_new_levels_mark" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_new_levesl_mark"
            style="@style/ResizableText"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:autoSizeMinTextSize="6dp"
            app:autoSizeMinTextSize="6dp"
            android:gravity="center"
            android:lines="2"
            android:padding="4dp"
            android:text="@string/new_levels_mark"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_package_name"
            app:layout_constraintEnd_toEndOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

