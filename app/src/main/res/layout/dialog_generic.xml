<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_quit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="10dp"
        android:background="@drawable/btn_trasparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_quit" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBackgroundDialog"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/img_bg_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.glomadrian.grav.GravView
        android:id="@+id/ly_include_dots_anim__"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:alpha_from="100"
        app:alpha_max_duration="3000"
        app:alpha_min_duration="1600"
        app:alpha_to="255"
        app:animationGenerators="@array/WallaIcon"
        app:ball_from_size="2dp"
        app:ball_to_size="6dp"
        app:colorGenerator="com.github.glomadrian.grav.generator.paint.ArrayColorGenerator"
        app:gravGenerator="com.github.glomadrian.grav.generator.grav.BallGenerator"
        app:percent_points_array="@array/walla_points_percent_points"
        app:pointGenerator="com.github.glomadrian.grav.generator.point.PercentPointGenerator"
        app:shake_direction="vertical"
        app:shake_max_duration="3500"
        app:shake_min_duration="1100"
        app:shake_variance="5dp"
        app:array_colors="@array/Spectral"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_title_generic_dialog"
        app:layout_constraintEnd_toEndOf="@+id/imgBackgroundDialog"
        app:layout_constraintStart_toStartOf="@+id/imgBackgroundDialog"
        app:layout_constraintTop_toTopOf="@+id/imgBackgroundDialog"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_top_title_generic_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="20dp"
        android:maxWidth="300dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_title_dialog"
        android:text="TOP TITLE"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgIconDialog" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgIconDialog"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_warning"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgBackgroundDialog"
        app:layout_constraintEnd_toEndOf="@+id/imgBackgroundDialog"
        app:layout_constraintStart_toStartOf="@+id/imgBackgroundDialog"
        app:layout_constraintTop_toTopOf="@+id/imgBackgroundDialog" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_generic_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:maxWidth="300dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_title_dialog"
        android:text="TITLE"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIconDialog" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_desc_generic_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:maxWidth="300dp"
        android:text="Description"
        android:textColor="@color/text_description_dialog"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_generic_dialog" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_top_btm_section_dialog"
        android:layout_width="0dp"
        android:layout_height="@dimen/dialog_bar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc_generic_dialog"
        android:src="@drawable/info_bar_black" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_top_btm_section_dialog">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_left"
            style="@style/BtnSecondary"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:minWidth="250dp"
            android:text="@string/cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_right"
            style="@style/BtnMain"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_left"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:minWidth="250dp"
            app:layout_constraintTop_toBottomOf="@id/btn_left"
            android:text="@string/OK" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>